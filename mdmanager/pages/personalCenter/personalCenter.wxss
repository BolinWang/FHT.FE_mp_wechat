/* pages/personalCenter/personalCenter.wxss */
.bck{
  height:250rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}
.personalBck{
  width: 100%;
  height: 100%;
}
.per-box{
  position: absolute;
  box-sizing: border-box;
  padding-top:212rpx;
  top:0;
  left: 0;
  height: 100%;
  display: flex;
  flex-flow: column;
  width: 100%;
}
.box-infor{
  position: relative;
  width:630rpx;
  height:184rpx;
  margin:0 auto;
  background: #ffffff;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.07);
  border-radius: 10px;  
}
.pho-box{
  position:absolute;
  top:-84rpx;
  height:172rpx;
  z-index:4;
  width:100%;
  display: flex;
  justify-content: center;
}
.out{
  position:absolute;
  top:20rpx;
  right:32rpx;
  z-index:12;
  font-size: 24rpx;
  height:38rpx;
  text-align: center;
  border-radius: 4px;
  line-height: 38rpx;
  border: 1px solid #4680FF;
  color: #4680FF;
  width:80rpx;
}
.out-icon{
  height:100%;
  width:100%;
}
.crop{
   height:172rpx;
   width:172rpx;
   border-radius: 100%;
   box-sizing: border-box;
   border:4rpx solid #fff;
   overflow: hidden;
}
.photo{
  height: 100%;
  width:100%;
  transition: opacity 0.4s linear 0.4s;
}
.name{
  padding-top: 110rpx;
  padding-bottom: 22rpx;
  font-size: 40rpx;
  color: #333333;
  letter-spacing: -0.48px;
  text-align: center;
  line-height: 40rpx;
}
.phone{
  font-size: 28rpx;
  color: #999999;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 28rpx;
}
.tab-go{
  padding:80rpx 180rpx;
  display: flex;
  justify-content: space-between;
}

.goItem{
  width: 120rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  position: relative;
}
.agreement{
  display: block;
  flex: 1;
  position: relative;
}
.goIcon{
  width:100%;
  display: block;
  height: 120rpx;
}
.goText{
  display: block;
  font-size: 12px;
  color: #101010;
  letter-spacing: -0.29px;
  text-align: center;
  padding-top:20rpx;
  line-height: 34rpx;
}
.prompt{
  position: absolute;
  height:34rpx;
  line-height: 34rpx;
  padding:0 12rpx;
  text-align: center;
  background: #FF0000;
  border-radius: 36rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  top:0;
  right:0;
  letter-spacing: 0;
}
.logo-icon{
  display: flex;
  flex: 1;
  padding-bottom: 60rpx;
  justify-content: center;
  align-items: flex-end;
}
.log-icon{
  height:60rpx;
  width:188rpx;
}
 
.Action {
  opacity: 1;
}
.col-await{
  color: #9c9c9c;
}