/* pages/couponChoose/couponChoose.wxss */
.item{
  background: #FFFFFF;
  height:156rpx;
  box-sizing: border-box;
  margin-top:40rpx;
  border: 0 solid rgba(255,140,7,0.15);
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.07);
  border-radius: 4px;
  display: flex;
  position: relative;
}
.item-active{
   border: 2rpx solid #FF8C07;
}
.view-box{
  padding:0 40rpx;
  overflow: hidden;
}
.icon-t{
  position: absolute;
  left: 0;
  top:0;
  background:#FF8C07;
  border-radius: 0 15rpx 15rpx 15rpx;  
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  color:#fff;
  font-size: 18rpx;
}
.item-hui .icon-t{
  background: #C5C5C5;
}
.item-hui .money,.item-hui .name{
  color: #999999;
}
.box-left{
  width:176rpx;
  padding:40rpx 0;
  border-right: 1px dashed rgba(255,140,7,0.15);
  text-align: center;
}
.explain{
  font-size: 20rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 20rpx;
}
.money{
  font-size: 48rpx;
  color: #333333;
  letter-spacing: 0;
}
.box-right{
  flex:1;
  padding-left: 26rpx;
  padding-top:28rpx;
  padding-bottom: 28rpx;
  text-align: left;
}
.name{
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 28rpx;
  padding-bottom: 20rpx;
}
.name-des{
  font-size: 20rpx;
  color: #999999;
  letter-spacing: 0;
  line-height: 20rpx;
  padding-bottom: 10rpx
}
.time{
  font-size: 20rpx;
  color: #999999;
  letter-spacing: 0;
  line-height: 20rpx;
}
.container{
  min-height:100%;
  background: #f5f5f5;
  padding-bottom: 216rpx;
  box-sizing: border-box
}
.btoom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  text-align: center;
  height: 148rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.btn{
  height:88rpx;
  line-height: 88rpx;
  flex: 1;
  color: #ffffff;
  background:#FF8C07;
  border-radius: 22px;
}
.check{
  width:88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.check image{
  height:48rpx;
  width:48rpx;
}
.k-box{
  height:100%;
  display: flex;
  position: absolute;
  top:0;
  left:0;
  right: 0;
  align-items: center;
  justify-content: center;
  flex-flow: column;
  padding-right:40rpx;

}
.k-img{
  width: 216rpx;
  height:194rpx;
}
.k-text{
  font-size: 14px;
  color: #C5C5C5;
  letter-spacing: 0;
  padding-top:40rpx;
}