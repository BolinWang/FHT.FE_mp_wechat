/* pages/payment/payment.wxss */
.container{
  min-height:100%;
  background: #f5f5f5;
  padding-bottom: 216rpx;
  box-sizing: border-box
}
.free-box{
  height: 216rpx;
  background: #fff;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.title{
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  padding: 40rpx 0;
}
.free{
  font-size: 48rpx;
  color: #333333;
  letter-spacing: 0;
}
.btoom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  text-align: center;
  height: 148rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}
.btn{
  height:88rpx;
  line-height: 88rpx;
  flex: 1;
  color: #ffffff;
  background: #3BA613;
  border-radius: 22px;
}
.coupon-text {
  color: red;
}
.coupon-count {
  color: #FF8C07;
}