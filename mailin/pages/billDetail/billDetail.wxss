/* pages/billDetail/billDetail.wxss */
.container{
  min-height:100%;
  background: #f5f5f5;
  padding-bottom: 216rpx;
}
.title{
  font-size: 24rpx;
  color: #999999;
  letter-spacing: -0.29px;
  line-height: 65rpx;
  padding-left: 40rpx;
}
.view-item-box{
  background: #ffffff;
}
.item{
  line-height: 50rpx;
  border-bottom: 2rpx solid #f5f5f5;
  font-size: 28rpx;
  padding-right: 40rpx;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  padding-left: 40rpx;
  display: flex;
}
.name{
  flex:1;
  color: #999999;
  min-width: 90rpx;
}
.name-tex{
  color: #333333;
}
.name-text-yel{
  color: #FF8C07;
}
.name-text-red{
  color: #E80000;
}
.name-text-inf{
  color: #4680FF;
  padding-right: 42rpx;
  margin-right: 42rpx;
  border-right: 2rpx solid #DDDDDD;
}
.bottom{
  height:148rpx;
  position: fixed;
  z-index: 10;
  bottom: 0;
  left: 0;
  width:100%;
  padding:30rpx 40rpx;
  display: flex;
  box-sizing: border-box;
  background: #ffffff;
  border-top: 2rpx solid #f5f5f5;
}
.bot-free{
  flex:1;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333333;
}
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.view-title{
  font-size: 34rpx;
  text-align:  center;
  line-height: 108rpx;
  position: relative;
  color: #475669;
  letter-spacing: 0;
}
.close{
  font-size: 46rpx;
  line-height: 108rpx;
  position: absolute;
  right: 16rpx;
  top:0;
}
.btn-go{
  background-image: linear-gradient(41deg, #FF8C07 4%, #FFAA07 94%);
  border-radius: 22px;
  width: 248rpx;
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
}