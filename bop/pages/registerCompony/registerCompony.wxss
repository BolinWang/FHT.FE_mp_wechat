/* pages/registerCompony/registerCompony.wxss */

page {
  background: #F2F2F2;
}

.aduit__detail {
  margin-bottom: 20rpx;
}

.section {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 2rpx solid #eee;
  background: #fff;
}

.section.noborder {
  border: 0 none;
}

.section input {
  width: 100%;
}

.section__title {
  width: 6em;
  white-space: nowrap;
  word-wrap: normal;
}

.autoHeight {
  height: auto;
}

.btn__fixed {
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #fff;
  font-size: 28rpx;
  background: #FF9800;
  border: 0 none;
  border-radius: 0;
  height: 72rpx;
  line-height: 72rpx;
}
.btn__fixed::after {
  border: 0 none;
}

