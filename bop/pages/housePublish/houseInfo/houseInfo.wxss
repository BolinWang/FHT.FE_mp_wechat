/* pages/housePublish/houseInfo/houseInfo.wxss */
page {
  background: #F2F2F2;
}
.aduit__detail {
  padding: 32rpx;
  background: #fff;
}
.section {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.section.autoHeight {
  height: auto;
  align-items: flex-start;
}

.section__title {
  width: 6em;
  color: #AAA;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
}

.footer button {
  border: 2rpx solid #FF9800;
  border-radius: 0;
  width: 100%;
  font-size: 28rpx;
}
.footer button::after {
  border-color: #FF9800;
  border-radius: 0;
}

.footer .btn__uncross {
  background: #FF9800;
  color: #fff;
} 

.footer .btn__cross {
  background: #fff;
  color: #FF9800;
}

.image {
  width: 100%;
  height: 320rpx;
  background: #eee;
  margin: 10rpx 0;
}

.flex__image {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.flex__room {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: right;
}

.flex__room .section__title {
  display: inline-block;
}

.autoHeight .section__title {
  white-space: nowrap;
  word-wrap: normal;
}

.tag__item {
  padding: 3rpx 6rpx;
  border: 2rpx solid #FF9800;
  border-radius: 5rpx;
  color: #FF9800;
  margin-right: 10rpx;
  font-size: 24rpx;
  line-height: 1.6;
  margin: 10rpx 10rpx 10rpx 0;
}

