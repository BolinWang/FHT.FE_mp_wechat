/* pages/signAudit/signDetail/signDetail.wxss */

page {
  background: #F2F2F2;
}
.aduit__detail {
  padding: 32rpx;
  background: #fff;
}
.section {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.section.autoHeight {
  height: auto;
  align-items: flex-start;
}

.section.autoHeight .section__title {
  width: 8em;
}

.view__nopic {
  margin-left: -2em;
}

.section__title {
  width: 6em;
  color: #AAA;
}

.section__title.uscc {
  width: 10em;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
}

.footer button {
  border: 2rpx solid #FF9800;
  border-radius: 0;
  width: 100%;
  font-size: 28rpx;
}
.footer button::after {
  border-color: #FF9800;
  border-radius: 0;
}

.footer .btn__uncross {
  background: #FF9800;
  color: #fff;
} 

.footer .btn__cross {
  background: #fff;
  color: #FF9800;
}

.image {
  width: 100%;
  height: 320rpx;
  background: #eee;
  margin: 10rpx 0;
}

.flex__image {
  display: flex;
  flex-direction: column;
  width: 100%;
}

