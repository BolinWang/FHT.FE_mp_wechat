/**index.wxss**/
.container {
  height: 100%;
  padding: 100rpx 70rpx;
} 
.center {
  text-align: center;
}
.login{
  width: 540rpx;
  height: 199rpx;
}
.loginBox {
  padding: 50rpx 0;
}
.inputBox {
  position: relative;
}
.inputBox .iconfont {
  color: #999;
  position: absolute;
  left: 10rpx;
  top: 22rpx;
  font-size: 50rpx;
}
.inputs {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 100rpx;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
}
.loginBtn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background-color: rgba(70, 128, 255, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 28rpx;
  text-align: center;

}