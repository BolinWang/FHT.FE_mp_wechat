.container {
  width: 100%;
  height: 100%; 
}
.userFix {
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  z-index: 2;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}
.userMsg {
  float: left;
  padding-left: 40rpx;
  color: #666;
}

.loginOut {
  width: 120rpx;
  height: 48rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  background-color: #fff;
  padding: 0;
  color: rgba(70, 128, 255, 1);
  font-size: 24rpx;
  text-align: center;
  border: 2rpx solid rgba(70, 128, 255, 1);
  float: right;
  margin-right: 20rpx;
  margin-top: 16rpx;
}
.reasonTitle {
  color:#000;
  padding-bottom: 10rpx;
  font-size:30rpx
}
.refuseReason {
  height: 100rpx;
  width:100%;
  font-size:30rpx;
  border:1px solid #ccc;
  border-radius: 10rpx;
  padding: 10rpx;
}
.noDataBox {
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;
}
.bgColor {
  background: #F5F5F5;
}
.bgPadding {
  padding-top: 80rpx;
}
.list {
  line-height: 48rpx;
  font-size: 26rpx;
  color: #000;
  float: left;
  margin-top: 10rpx;
  background: #fff;
  position: relative;
  width: 100%;
}
.dataStatus {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100rpx;
}
.noData {
  width: 400rpx;
}
.list:last-child {
  margin-bottom: 0;
}
.paddingLeft {
  padding-left: 40rpx;
  padding-top: 10rpx;
}
.flex {
  display: flex;
  flex-direction: row;
}
.title {
  width: 160rpx;
  color:#666;
}
.content {
  flex: 1;
  color: #000;
}
.lookFlex {
  font-size: 30rpx;
  line-height: 60rpx;
}
.lookFlex .title {
  width: 170rpx;
}
.half {
  width: 50%;
}
.lookBtn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 8rpx;
  background: #fff;
  padding: 0;
  color: rgba(70, 128, 255, 1);
  font-size: 24rpx;
  text-align: center;
  border: 2rpx solid rgba(70, 128, 255, 1);
  margin-left: 0;
}
button::after {
  border:none
}
.borderTop {
  border-top: 1rpx solid #ccc;
  padding: 10rpx 0;
}
.textCenter {
  text-align: center;
}
.noPadding{
  padding: 0;
}
.buttonArr {
  height: 64rpx;
  line-height: 64rpx;
}
.buttonArr .blue {
  color: #4680FF;
}
.buttonArr .applyBtn {
  background: #4680FF;
  color: #fff;
  border:1rpx solid #4680FF;
}
.rightBorder {
  border:1rpx solid #4680FF;
}
.blue {
  color: #4680FF;
}
.red {
  color: #E51C23;
}
.clear {
  clear: both;
}
.buttonArr .disabled {
  border: 1rpx solid #ddd;
  color: #ddd;
}
.buttonArr .disabled1 {
  background: #e5e5e5;
  color:#fff;
  border:1rpx solid #e5e5e5;
}